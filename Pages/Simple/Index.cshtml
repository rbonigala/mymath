@page
@model MyMath.Pages.Simple.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div style="margin-top:50px"></div>
<div class="row col-md-offset-2"><h3>Please solve this problem</h3></div>
<div style="margin-top:50px"></div>
<div>
    <form class="form-horizontal">
        <div class="form-group form-group-lg">
            <label class="col-sm-2 control-label" for="formGroupInputLarge"></label>
            <div class="col-sm-2">
                <input class="form-control" type="text" id="formGroupInputLarge" placeholder="@Model.twoNumberQuestion.LeftNumber" disabled>
            </div>
        </div>
        <div class="form-group form-group-lg">
            <label class="col-sm-2 control-label" for="formGroupInputLarge">+</label>
            <div class="col-sm-2">

                <input class="form-control" type="text" id="formGroupInputLarge" placeholder="@Model.twoNumberQuestion.RightNumber" disabled>
            </div>
        </div>
        <div><hr></div>

        <div class="form-group form-group-lg">
            <label class="col-sm-2 control-label" for="formGroupInputLarge"></label>
            <div class="col-sm-2">
                <input class="form-control" type="text" id="formGroupInputLarge" autofocus>
            </div>
        </div>
        <div class="form-group form-group-lg">
            <label class="col-sm-2 control-label" for="formGroupInputLarge"></label>
            <div class="col-sm-2">
                <button class="btn btn-primary" type="submit">Next Question</button>
            </div>
        </div>
    </form>
</div>
