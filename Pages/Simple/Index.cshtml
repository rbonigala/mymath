@page
@model MyMath.Pages.Simple.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div style="margin-top:50px"></div>
<div class="row">
    <div class="col-md-offset-2 col-md-4">
        <h3>Please solve this problem</h3>
    </div>
    <div class="col-md-4" id="timer">

    </div>
</div>

<div style="margin-top:50px"></div>
<div class="container">
    <form class="form-horizontal" method="post">
        <div class="row form-group form-group-lg">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <input asp-for="CurrentQuestion.LeftNumber" class="form-control" disabled>

            </div>
        </div>
        <div class="row form-group form-group-lg">
            <label class="col-md-2 control-label" asp-for="CurrentQuestion.RightNumber">@Model.CurrentQuestion.Operation</label>
            <div class="col-md-2">
                <input asp-for="CurrentQuestion.RightNumber" class="form-control" disabled />
            </div>
        </div>
        <div><hr></div>

        <div class="row form-group form-group-lg">
            <label class="col-md-2 control-label" for="answer"></label>
            <div class="col-md-2">
                <input type="number" id="GivenAnswerTxt" name="GivenAnswerTxt" class="form-control" autofocus>

            </div>
            <div class="col-md-2">
                <button class="btn btn-primary" id="btnCheckAnswer" autocomplete="off" name="btnCheckAnswer" type="submit">Check Answer</button>
            </div>
            <div class="col-md-2">
                <button class="btn btn-success" id="btnNextQ" name="btnNextQ" type="submit">Next Question</button>
            </div>
        </div>

        <div class="row form-group form-group-lg">
            <div class=col-md-4></div>
            <div class="col-md-2">
                <mark><strong><asp:label id="status" name="status"></asp:label></strong></mark>
            </div>
        </div>
        <input name="result" id="result" type="hidden" value="@Model.CurrentQuestion.Result" />
    </form>
</div>
