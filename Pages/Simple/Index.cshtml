@page
@model MyMath.Pages.Simple.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div style="margin-top:50px"></div>
<div class="row col-md-offset-2"><h3>Please solve this problem</h3></div>
<div style="margin-top:50px"></div>
<div>
    <form class="form-horizontal" method="post">
        <div class="form-group form-group-lg">
            <label class="col-sm-2 control-label" asp-for="CurrentQuestion.LeftNumber"></label>
            <div class="col-sm-2">
                <input asp-for="CurrentQuestion.LeftNumber" class="form-control">

            </div>
        </div>
        <div class="form-group form-group-lg">
            <label class="col-sm-2 control-label" asp-for="CurrentQuestion.RightNumber">+</label>
            <div class="col-sm-2">
                <input asp-for="CurrentQuestion.RightNumber" class="form-control" />
            </div>
        </div>
        <div><hr></div>

        <div class="form-group form-group-lg">
            <label class="col-sm-2 control-label" for="answer"></label>
            <div class="col-sm-2">

                <input asp-for="CurrentQuestion.Result" class="form-control">
              
            </div>
        </div>
        <div class="form-group form-group-lg">
            <label class="col-sm-2 control-label" for=""></label>
            <div class="col-sm-2">
                <button class="btn btn-primary" type="submit">Next Question</button>
            </div>
        </div>
        <div class="form-group form-group-lg">
            <label asp-for="Status"></label>

        </div>
    </form>
</div>
